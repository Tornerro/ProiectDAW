@model Build1.Models.Task

@{
    ViewBag.Title = "Edit";
}

<br />
@using (Html.BeginForm(actionName: "Edit", controllerName: "Tasks"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Label("NumeTask", "Nume task")
    <br />
    @Html.EditorFor(m => m.NumeTask, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("NumeTask", null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("DescriereTask", "Descriere task")
    <br />
    @Html.TextArea("DescriereTask", null, new { @class = "form-control" })
    <br />
    <br />
    <select class="form-control" id="Status" name="Status">
        <option>Neterminat</option>
        <option>Terminat</option>
    </select>


    <button class="btn btn-success" type="submit">Modifica taskul</button>
}


